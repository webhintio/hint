{
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:json",
    "onLanguage:jsonc",
    "onLanguage:less",
    "onLanguage:sass",
    "onLanguage:scss",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js",
      "!dist/tests/**/fixtures/**/*.js"
    ],
    "timeout": "1m"
  },
  "bundleSize": 105000,
  "categories": [
    "Linters"
  ],
  "contributes": {
    "configuration": {
      "title": "webhint",
      "properties": {
        "webhint.enableTelemetry": {
          "type": "string",
          "default": "ask",
          "enum": [
            "ask",
            "enabled",
            "disabled"
          ],
          "enumDescriptions": [
            "Prompt to share limited usage data",
            "Share limited usage data",
            "Don't share limited usage data"
          ],
          "markdownDescription": "Controls whether to share [limited usage data](https://webhint.io/docs/user-guide/telemetry/summary/) to help improve webhint."
        }
      }
    }
  },
  "description": "Run webhint in Visual Studio Code.",
  "devDependencies": {
    "@hint/utils": "^7.0.7",
    "@hint/utils-telemetry": "^1.0.6",
    "@hint/utils-types": "^1.1.1",
    "@types/node": "^14.14.12",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^9.0.8",
    "@types/vscode": "^1.48.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "ava": "^3.13.0",
    "configstore": "^5.0.1",
    "cpx": "^1.5.0",
    "eslint": "^7.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-markdown": "^1.0.2",
    "hint": "^6.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.1",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "vsce": "^1.81.1",
    "vscode-languageclient": "^6.1.3",
    "vscode-languageserver": "^6.1.1",
    "vscode-languageserver-textdocument": "^1.0.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "displayName": "webhint",
  "engines": {
    "node": ">=8.0.0",
    "vscode": "^1.48.0"
  },
  "homepage": "https://webhint.io/",
  "icon": "icon.png",
  "license": "Apache-2.0",
  "main": "./dist/src/extension",
  "name": "vscode-webhint",
  "nyc": {
    "extends": "../../.nycrc"
  },
  "publisher": "webhint",
  "repository": {
    "directory": "packages/extension-vscode",
    "type": "git",
    "url": "https://github.com/webhintio/hint.git"
  },
  "scripts": {
    "build": "npm-run-all build:*",
    "build-bundle": "webpack --mode production",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc -b",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext .js,.md,.ts --ignore-path ../../.eslintignore",
    "lint:dependencies": "node ../../scripts/lint-dependencies.js",
    "lint:md": "node ../../scripts/lint-markdown.js",
    "test": "npm run lint && npm run build && npm run test-only",
    "test-only": "nyc ava && vsce package --yarn && npm run validate-bundle-size && npm run clean && npm run build",
    "test-release": "npm run lint && npm run build && ava && vsce package --yarn && npm run validate-bundle-size",
    "validate-bundle-size": "node ./scripts/bundle-size.js",
    "vscode:prepublish": "npm run clean && npm run build-bundle",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:assets": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "1.5.9"
}
