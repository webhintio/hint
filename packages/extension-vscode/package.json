{
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:json",
    "onLanguage:jsonc",
    "onLanguage:less",
    "onLanguage:sass",
    "onLanguage:scss",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js",
      "!dist/tests/**/fixtures/**/*.js"
    ],
    "timeout": "1m"
  },
  "bundleSize": 135000,
  "categories": [
    "Linters"
  ],
  "description": "Run webhint in Visual Studio Code.",
  "devDependencies": {
    "@hint/utils": "^7.0.10",
    "@hint/utils-types": "^1.1.3",
    "@types/node": "^16.4.10",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.4",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.1",
    "ava": "^3.15.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.29.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-markdown": "^2.2.1",
    "hint": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.4",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.5",
    "vsce": "^1.100.1",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1",
    "webpack": "^5.56.1",
    "webpack-cli": "^4.8.0"
  },
  "displayName": "webhint",
  "engines": {
    "node": ">=8.0.0",
    "vscode": "^1.60.0"
  },
  "homepage": "https://webhint.io/",
  "icon": "icon.png",
  "license": "Apache-2.0",
  "main": "./dist/src/extension",
  "name": "vscode-webhint",
  "nyc": {
    "extends": "../../.nycrc"
  },
  "publisher": "webhint",
  "repository": {
    "directory": "packages/extension-vscode",
    "type": "git",
    "url": "https://github.com/webhintio/hint.git"
  },
  "scripts": {
    "build": "npm-run-all build:*",
    "build-bundle": "webpack --mode production",
    "build:assets": "copyfiles \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc -b",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext .js,.md,.ts --ignore-path ../../.eslintignore",
    "lint:dependencies": "node ../../scripts/lint-dependencies.js",
    "lint:md": "node ../../scripts/lint-markdown.js",
    "test": "npm run lint && npm run build && npm run test-only",
    "test-only": "nyc ava && vsce package --yarn && npm run validate-bundle-size && npm run clean && npm run build",
    "test-release": "npm run lint && npm run build && ava && vsce package --yarn && npm run validate-bundle-size",
    "validate-bundle-size": "node ./scripts/bundle-size.js",
    "vscode:prepublish": "npm run clean && npm run build-bundle",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:assets": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "1.5.12"
}
