{
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:json",
    "onLanguage:jsonc",
    "onLanguage:less",
    "onLanguage:sass",
    "onLanguage:scss",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js",
      "!dist/tests/**/fixtures/**/*.js"
    ],
    "timeout": "1m",
    "workerThreads": false
  },
  "bundleSize": 150000,
  "categories": [
    "Linters"
  ],
  "description": "Run webhint in Visual Studio Code.",
  "devDependencies": {
    "@hint/utils": "^7.0.24",
    "@hint/utils-types": "^1.2.1",
    "@types/node": "^22.7.4",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.11",
    "@types/vscode": "^1.86.1",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^4.33.0",
    "ava": "^4.3.3",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-markdown": "^2.2.1",
    "hint": "^7.1.13",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^5.0.0",
    "sinon": "^13.0.1",
    "ts-loader": "^9.4.2",
    "typescript": "^4.5.5",
    "vsce": "^2.15.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.9.1"
  },
  "displayName": "webhint",
  "engines": {
    "node": ">=14.0.0",
    "vscode": "^1.86.1"
  },
  "homepage": "https://webhint.io/",
  "icon": "icon.png",
  "license": "Apache-2.0",
  "main": "./dist/src/extension",
  "name": "vscode-webhint",
  "nyc": {
    "extends": "../../.nycrc"
  },
  "publisher": "webhint",
  "repository": {
    "directory": "packages/extension-vscode",
    "type": "git",
    "url": "https://github.com/webhintio/hint.git"
  },
  "scripts": {
    "build": "npm-run-all build:*",
    "build-bundle": "webpack --mode production",
    "build:assets": "copyfiles \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc -b",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext .js,.md,.ts --ignore-path ../../.eslintignore",
    "lint:dependencies": "node ../../scripts/lint-dependencies.js",
    "lint:md": "node ../../scripts/lint-markdown.js",
    "test": "npm run lint && npm run build && npm run test-only",
    "test-only": "nyc ava && vsce package --yarn && npm run validate-bundle-size && npm run clean && npm run build",
    "test-release": "npm run lint && npm run build && ava && vsce package --yarn && npm run validate-bundle-size",
    "validate-bundle-size": "node ./scripts/bundle-size.js",
    "vscode:prepublish": "npm run clean && npm run build-bundle",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:assets": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "2.1.15"
}
