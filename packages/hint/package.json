{
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "bin": "./dist/src/bin/hint.js",
  "dependencies": {
    "ajv": "^6.8.1",
    "applicationinsights": "^1.1.0",
    "async": "^2.6.1",
    "boxen": "^2.1.0",
    "browserslist": "^4.4.1",
    "caniuse-api": "^3.0.0",
    "chalk": "^2.4.2",
    "content-type": "^1.0.4",
    "debug": "^4.1.1",
    "eventemitter2": "^5.0.1",
    "file-type": "^10.7.1",
    "file-url": "^2.0.2",
    "globby": "^9.0.0",
    "is-ci": "^2.0.0",
    "is-svg": "^3.0.0",
    "jsonc-parser": "^2.0.3",
    "lodash": "^4.17.11",
    "mime-db": "1.35.0",
    "npm-registry-fetch": "^3.9.0",
    "optionator": "^0.8.2",
    "ora": "^3.0.0",
    "request": "^2.88.0",
    "semver": "^5.6.0",
    "strip-bom": "^3.0.0",
    "strip-json-comments": "^2.0.1",
    "update-notifier": "^2.5.0"
  },
  "description": "The linting tool for the web",
  "devDependencies": {
    "@types/async": "^2.4.0",
    "@types/configstore": "^4.0.0",
    "@types/content-type": "^1.1.2",
    "@types/debug": "0.0.31",
    "@types/file-type": "^10.6.0",
    "@types/file-url": "^2.0.0",
    "@types/globby": "^8.0.0",
    "@types/is-svg": "^3.0.0",
    "@types/jsdom": "^12.2.1",
    "@types/lodash": "^4.14.120",
    "@types/mime-db": "^1.27.0",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "10.12.18",
    "@types/ora": "^3.0.0",
    "@types/request": "^2.48.1",
    "@types/semver": "^5.4.0",
    "@types/sinon": "^7.0.5",
    "@types/strip-bom": "^3.0.0",
    "@types/strip-json-comments": "^0.0.30",
    "@types/update-notifier": "^2.5.0",
    "ava": "^1.2.1",
    "cpx": "^1.5.0",
    "eslint": "^5.13.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-typescript": "0.14.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.2.0",
    "proxyquire": "2.0.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.3",
    "typescript": "^3.3.1",
    "@typescript-eslint/parser": "1.3.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    ".hintrc",
    "dist/src",
    "dist/tests/helpers",
    "docs"
  ],
  "homepage": "https://webhint.io/",
  "keywords": [
    "a11y",
    "accessibility",
    "best-practices",
    "compatibility",
    "lint",
    "performance",
    "security"
  ],
  "license": "Apache-2.0",
  "main": "./dist/src/lib/engine.js",
  "name": "hint",
  "nyc": {
    "branches": 75,
    "extends": "../../.nycrc",
    "include": [
      "dist/src/**/*.js"
    ]
  },
  "optionalDependencies": {
    "@hint/configuration-web-recommended": "^5.0.0"
  },
  "repository": "https://github.com/webhintio/hint",
  "scripts": {
    "ava": "ava",
    "build": "npm-run-all build:*",
    "build-release": "npm run clean && npm run build:assets && tsc --inlineSourceMap false --removeComments true",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc -b",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --ignore-path ../../.eslintignore --report-unused-disable-directives",
    "lint:md": "markdownlint docs README.md",
    "hint": "node dist/src/bin/hint",
    "test": "npm run lint && npm run build && npm run test-only",
    "test-only": "nyc ava",
    "test-release": "npm run lint && npm run clean && npm run build:assets && tsc && npm run test-only",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:assets": "npm run build:assets -- -w --no-initial",
    "watch:resources": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "4.4.0"
}
