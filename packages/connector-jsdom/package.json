{
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "dependencies": {
    "@hint/utils-connector-tools": "^2.0.2",
    "jsdom": "^13.2.0",
    "mutationobserver-shim": "^0.3.3",
    "node-pre-gyp": "^0.12.0",
    "whatwg-fetch": "^3.0.0"
  },
  "description": "hint connector for JSDOM",
  "devDependencies": {
    "@hint/utils-create-server": "^2.0.1",
    "@types/jsdom": "^12.2.1",
    "@types/lodash": "^4.14.120",
    "ava": "^1.2.0",
    "cpx": "^1.5.0",
    "eslint": "^5.12.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-typescript": "0.14.0",
    "hint": "^4.3.1",
    "lodash": "^4.17.11",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.3",
    "typescript": "^3.3.1",
    "@typescript-eslint/parser": "1.1.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist/src"
  ],
  "homepage": "https://webhint.io/",
  "keywords": [
    "connector",
    "jsdom",
    "hint",
    "hint-connector-jsdom",
    "webhint"
  ],
  "license": "Apache-2.0",
  "main": "./dist/src/connector.js",
  "name": "@hint/connector-jsdom",
  "nyc": {
    "extends": "../../.nycrc"
  },
  "optionalDependencies": {
    "canvas": "2.2.0"
  },
  "peerDependencies": {
    "hint": "^4.3.1"
  },
  "repository": "webhintio/hint",
  "scripts": {
    "build": "npm-run-all build:*",
    "build-release": "npm run clean && npm run build:assets && tsc --inlineSourceMap false --removeComments true",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc -b",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --ignore-path ../../.eslintignore --report-unused-disable-directives",
    "lint:md": "node ../../scripts/lint-markdown.js",
    "test": "npm run lint && npm run build && npm run test-only",
    "test-only": "nyc ava",
    "test-release": "npm run lint && npm run clean && npm run build:assets && tsc && npm run test-only",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "2.0.2"
}
