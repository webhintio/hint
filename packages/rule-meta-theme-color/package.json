{
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "dependencies": {
    "color-string": "^1.5.2"
  },
  "description": "sonarwhal rule that checks for best practices related to the 'theme-color' meta tag",
  "devDependencies": {
    "ava": "^0.25.0",
    "cpx": "^1.5.0",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-typescript": "^0.11.0",
    "markdownlint-cli": "^0.8.1",
    "npm-link-check": "^2.0.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "sonarwhal": "^1.7.0",
    "typescript": "^2.8.1",
    "typescript-eslint-parser": "^15.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist/src",
    "images",
    "npm-shrinkwrap.json"
  ],
  "homepage": "https://sonarwhal.com/",
  "keywords": [
    "sonarwhal",
    "sonarwhal-rule",
    "meta-theme-color"
  ],
  "license": "Apache-2.0",
  "main": "dist/src/rule.js",
  "name": "@sonarwhal/rule-meta-theme-color",
  "nyc": {
    "extends": "../../.nycrc"
  },
  "peerDependencies": {
    "sonarwhal": "^1.7.0"
  },
  "repository": "sonarwhal/sonarwhal",
  "scripts": {
    "build": "npm run clean && npm-run-all build:*",
    "build-release": "npm run clean && npm run build:assets && tsc --inlineSourceMap false --removeComments true",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --ignore-path ../../.eslintignore --report-unused-disable-directives",
    "lint:md": "markdownlint --ignore CHANGELOG.md *.md",
    "test": "npm run lint && npm run build && nyc ava",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:assets": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "2.0.0"
}
