{
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "bin": "./dist/src/bin/sonarwhal.js",
  "dependencies": {
    "@sonarwhal/configuration-web-recommended": "^1.0.0",
    "ajv": "^6.5.1",
    "async": "^2.6.1",
    "boxen": "^1.3.0",
    "browserslist": "^4.0.0",
    "caniuse-api": "^2.0.0",
    "canvas-prebuilt": "^1.6.5-prerelease.1",
    "chalk": "^2.4.1",
    "content-type": "^1.0.4",
    "debug": "^3.1.0",
    "eventemitter2": "^5.0.1",
    "file-type": "^8.0.0",
    "file-url": "^2.0.2",
    "fs-extra": "^6.0.1",
    "globby": "^8.0.1",
    "handlebars": "^4.0.11",
    "iltorb": "^2.3.0",
    "inquirer": "^6.0.0",
    "is-svg": "^3.0.0",
    "lodash": "^4.17.10",
    "mime-db": "^1.34.0",
    "mkdirp": "^0.5.1",
    "npm-registry-fetch": "^3.1.1",
    "optionator": "^0.8.2",
    "ora": "^2.0.0",
    "request": "^2.87.0",
    "require-uncached": "^1.0.3",
    "semver": "^5.5.0",
    "shelljs": "^0.8.1",
    "strip-bom": "^3.0.0",
    "strip-json-comments": "^2.0.1",
    "update-notifier": "^2.5.0"
  },
  "description": "The linting tool for the web",
  "devDependencies": {
    "@types/debug": "0.0.30",
    "@types/fs-extra": "5.0.2",
    "@types/globby": "^6.1.0",
    "@types/handlebars": "^4.0.38",
    "@types/lodash": "^4.14.109",
    "@types/mime-db": "^1.27.0",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "8.0.14",
    "@types/request": "^2.0.13",
    "@types/semver": "^5.4.0",
    "@types/shelljs": "^0.7.9",
    "@types/sinon": "^4.3.3",
    "@types/update-notifier": "^2.2.0",
    "ava": "^0.25.0",
    "cpx": "^1.5.0",
    "eslint": "^5.0.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-typescript": "^0.12.0",
    "markdownlint-cli": "^0.10.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^12.0.2",
    "proxyquire": "2.0.0",
    "rimraf": "^2.6.2",
    "sinon": "^6.0.1",
    "typescript": "^2.9.2",
    "typescript-eslint-parser": "^16.0.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    ".sonarwhalrc",
    "dist/src",
    "dist/tests/helpers",
    "docs",
    "npm-shrinkwrap.json"
  ],
  "homepage": "https://sonarwhal.com/",
  "keywords": [
    "a11y",
    "accessibility",
    "best-practices",
    "interoperability",
    "lint",
    "performance",
    "security"
  ],
  "license": "Apache-2.0",
  "main": "./dist/src/lib/sonarwhal.js",
  "name": "sonarwhal",
  "nyc": {
    "branches": 75,
    "extends": "../../.nycrc",
    "include": [
      "dist/src/**/*.js"
    ]
  },
  "optionalDependencies": {
    "@sonarwhal/connector-edge": "^1.0.0"
  },
  "repository": "https://github.com/sonarwhal/sonarwhal",
  "scripts": {
    "ava": "ava",
    "build": "npm run clean && npm-run-all build:*",
    "build-release": "npm run clean && npm run build:assets && tsc --inlineSourceMap false --removeComments true",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --ignore-path ../../.eslintignore --report-unused-disable-directives",
    "lint:md": "markdownlint docs README.md src/lib/rules/**/*.md",
    "sonarwhal": "node dist/src/bin/sonarwhal",
    "test": "npm run lint && npm run build && nyc ava",
    "test-on-travis": "npm run lint && npm run commitmsg && npm run build && nyc ava \"dist/tests/**/*.js\" --concurrency=2 --timeout=2m",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:assets": "npm run build:assets -- -w --no-initial",
    "watch:resources": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "1.0.0"
}
