{
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "description": "Hint to check if display applied to a summary tag will hide the open/close icon",
  "devDependencies": {
    "@hint/parser-css": "^3.0.8",
    "@hint/utils-tests-helpers": "^5.0.6",
    "@types/debug": "^4.1.4",
    "@types/node": "^12.7.4",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.12.0",
    "ava": "^1.4.1",
    "cpx": "^1.5.0",
    "eslint": "^5.15.1",
    "eslint-plugin-markdown": "^1.0.0",
    "hint": "^5.2.2",
    "npm-link-check": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.0",
    "rimraf": "^2.6.3",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "@hint/utils": "^4.1.0",
    "postcss-selector-parser": "^6.0.2"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist/src"
  ],
  "homepage": "https://webhint.io/",
  "keywords": [
    "summary-display",
    "summary-display-hint",
    "webhint",
    "webhint-hint"
  ],
  "license": "Apache-2.0",
  "main": "dist/src/hint.js",
  "name": "@hint/hint-summary-display",
  "nyc": {
    "extends": "../../.nycrc"
  },
  "peerDependencies": {
    "@hint/parser-css": "^3.0.8",
    "hint": "^5.2.2"
  },
  "private": true,
  "repository": {
    "directory": "packages/hint-summary-display",
    "type": "git",
    "url": "https://github.com/webhintio/hint.git"
  },
  "scripts": {
    "build": "npm run i18n && npm-run-all build:*",
    "build-release": "npm run clean && npm run i18n && npm run build:assets && tsc --inlineSourceMap false --removeComments true",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc -b",
    "clean": "rimraf dist",
    "i18n": "node ../../scripts/create-i18n.js",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --ignore-path ../../.eslintignore --report-unused-disable-directives",
    "lint:dependencies": "node ../../scripts/lint-dependencies.js",
    "lint:md": "node ../../scripts/lint-markdown.js",
    "test": "npm run lint && npm run build && npm run test-only",
    "test-only": "nyc ava",
    "test-release": "npm run lint && npm run clean && npm run build:assets && tsc && npm run test-only",
    "init": "npm install && npm run build",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:assets": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "1.0.0"
}
