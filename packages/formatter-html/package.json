{
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "description": "A hint formatter that outputs the issues in an HTML file.",
  "dependencies": {
    "@hint/utils": "^1.0.0",
    "ejs": "^2.6.1",
    "fs-extra": "^7.0.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "@types/ejs": "^2.6.3",
    "@types/fs-extra": "^5.0.5",
    "@types/moment": "^2.13.0",
    "@types/node": "^11.13.9",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^7.0.11",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "ava": "^1.4.1",
    "cpx": "^1.5.0",
    "eslint": "^5.15.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-markdown": "^1.0.0",
    "hint": "^4.5.0",
    "npm-link-check": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.0.0",
    "proxyquire": "2.0.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "typescript": "^3.4.5"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist/src",
    "images"
  ],
  "homepage": "https://webhint.io/",
  "keywords": [
    "webhint",
    "webhint-formatter",
    "webhint-html",
    "html"
  ],
  "license": "Apache-2.0",
  "main": "dist/src/formatter.js",
  "name": "@hint/formatter-html",
  "nyc": {
    "extends": "../../.nycrc"
  },
  "peerDependencies": {
    "hint": "^4.5.0"
  },
  "repository": "webhintio/hint",
  "scripts": {
    "build": "npm-run-all build:*",
    "build-release": "npm run clean && npm run build:assets && tsc --inlineSourceMap false --removeComments true",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc -b",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --ignore-path ../../.eslintignore --report-unused-disable-directives",
    "lint:dependencies": "node ../../scripts/lint-dependencies.js",
    "lint:md": "node ../../scripts/lint-markdown.js",
    "test": "npm run lint && npm run build && npm run test-only",
    "test-only": "nyc ava",
    "test-release": "npm run lint && npm run clean && npm run build:assets && tsc && npm run test-only",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:assets": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "3.2.1"
}
