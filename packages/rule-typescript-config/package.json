{
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "description": "sonarwhal rule that checks if the TypeScript configuration is valid.",
  "devDependencies": {
    "@sonarwhal/parser-typescript-config": "^3.0.0",
    "ava": "^0.25.0",
    "cpx": "^1.5.0",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-typescript": "^0.12.0",
    "markdownlint-cli": "^0.10.0",
    "npm-link-check": "^2.0.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "sinon": "^5.0.10",
    "sonarwhal": "^1.10.0",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^15.0.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist",
    "npm-shrinkwrap.json"
  ],
  "homepage": "https://sonarwhal.com/",
  "keywords": [
    "sonarwhal",
    "sonarwhal-rule",
    "typescript-config-is-valid",
    "typescript-config-is-valid-rule"
  ],
  "license": "Apache-2.0",
  "main": "dist/src/index.js",
  "name": "@sonarwhal/rule-typescript-config",
  "nyc": {
    "extends": "../../.nycrc"
  },
  "peerDependencies": {
    "@sonarwhal/parser-typescript-config": "^3.0.0",
    "sonarwhal": "^1.10.0"
  },
  "repository": "sonarwhal/sonarwhal",
  "scripts": {
    "build": "npm run clean && npm-run-all build:*",
    "build-release": "npm run clean && npm run build:assets && tsc --inlineSourceMap false --removeComments true",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext ts --ext md --ignore-path ../../.eslintignore --report-unused-disable-directives",
    "lint:md": "markdownlint --ignore CHANGELOG.md *.md",
    "test": "npm run lint && npm run build && nyc ava",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:assets": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "3.2.1"
}
