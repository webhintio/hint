{
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "bin": {
    "create-hint": "./dist/src/new-hint.js"
  },
  "description": "webhint's hint initializer package",
  "devDependencies": {
    "@types/node": "10.12.18",
    "ava": "^0.25.0",
    "cpx": "^1.5.0",
    "eslint": "^5.12.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-typescript": "0.14.0",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "fs-extra": "^7.0.0",
    "handlebars": "^4.0.11",
    "hint": "^4.3.0",
    "inquirer": "^6.2.1",
    "mkdirp": "^0.5.1",
    "npm-link-check": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.2",
    "ts-loader": "^5.3.3",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "21.0.2",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist/src"
  ],
  "homepage": "https://webhint.io/",
  "keywords": [
    "create",
    "hint",
    "webhint"
  ],
  "license": "Apache-2.0",
  "name": "create-hint",
  "nyc": {
    "extends": "../../.nycrc"
  },
  "repository": "webhintio/hint",
  "scripts": {
    "build": "npm run clean && npm-run-all build:*",
    "build-release": "npm run clean && npm run build:assets && webpack",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc -b",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --ignore-path ../../.eslintignore --report-unused-disable-directives",
    "lint:md": "node ../../scripts/lint-markdown.js",
    "test": "npm run lint && npm run build && npm run test-only",
    "test-only": "nyc ava",
    "test-release": "npm run lint && npm run clean && npm run build:assets && tsc && npm run test-only",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:assets": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch",
    "webpack": "webpack"
  },
  "version": "3.0.0"
}
