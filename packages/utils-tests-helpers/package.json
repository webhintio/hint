{
  "dependencies": {
    "@hint/connector-chrome": "^2.0.1",
    "@hint/connector-jsdom": "^2.0.2",
    "@hint/connector-local": "^2.0.2",
    "@hint/utils-create-server": "^2.0.1",
    "ava": "^1.2.0",
    "hint": "^4.3.1"
  },
  "description": "hint tests helpers",
  "devDependencies": {
    "cpx": "^1.5.0",
    "eslint": "^5.12.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-typescript": "0.14.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "typescript": "^3.2.4",
    "@typescript-eslint/parser": "1.1.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://webhint.io/",
  "keywords": [
    "hint",
    "hint-utils-tests-helpers",
    "tests",
    "utils",
    "webhint"
  ],
  "license": "Apache-2.0",
  "name": "@hint/utils-tests-helpers",
  "peerDependencies": {
    "hint": "^4.3.1"
  },
  "repository": "webhintio/hint",
  "scripts": {
    "build": "npm run clean && npm-run-all build:*",
    "build-release": "npm run clean && npm run build:assets && tsc --inlineSourceMap false --removeComments true",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc -b",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --ignore-path ../../.eslintignore --report-unused-disable-directives",
    "lint:md": "node ../../scripts/lint-markdown.js",
    "test": "npm run test-only",
    "test-only": "npm run build",
    "test-release": "npm run lint && npm run clean && npm run build:assets && tsc",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "2.0.3"
}
