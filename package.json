{
  "ava": {
    "babel": {
      "presets": []
    },
    "concurrency": 5,
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "bin": "./dist/src/bin/sonar.js",
  "dependencies": {
    "axe-core": "^2.2.2",
    "browserslist": "^2.1.4",
    "caniuse-api": "^2.0.0",
    "canvas-prebuilt": "^1.6.0-canvas.5",
    "chalk": "^1.1.3",
    "chrome-remote-interface": "^0.23.2",
    "content-type": "^1.0.2",
    "debug": "^2.6.8",
    "edge-diagnostics-adapter": "file:..\\edge-diagnostics-adapter",
    "eslint": "^3.19.0",
    "eventemitter2": "^4.1.0",
    "file-type": "^5.0.0",
    "file-url": "^2.0.2",
    "globby": "^6.1.0",
    "handlebars": "^4.0.10",
    "iconv-lite": "^0.4.17",
    "inquirer": "^3.0.6",
    "is-ci": "^1.0.10",
    "is-my-json-valid": "^2.15.0",
    "is-resolvable": "^1.0.0",
    "is-svg": "^2.1.0",
    "jsdom": "^11.0.0",
    "json-stable-stringify": "^1.0.1",
    "lockfile": "^1.0.3",
    "lodash": "^4.17.4",
    "mime-db": "^1.28.0",
    "mkdirp": "^0.5.1",
    "node-ssllabs": "^0.5.0",
    "optionator": "^0.8.2",
    "ora": "^1.3.0",
    "path-is-inside": "^1.0.2",
    "pluralize": "^5.0.0",
    "request": "^2.79.0",
    "require-uncached": "^1.0.3",
    "same-origin": "^0.1.1",
    "shelljs": "^0.7.6",
    "strip-bom": "^3.0.0",
    "strip-json-comments": "^2.0.1",
    "text-table": "^0.2.0",
    "user-home": "^2.0.0",
    "which": "^1.2.14"
  },
  "description": "The linting tool for the web",
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/content-type": "^1.1.0",
    "@types/debug": "0.0.29",
    "@types/file-type": "0.0.2",
    "@types/iconv-lite": "0.0.1",
    "@types/is-my-json-valid": "0.0.19",
    "@types/jsdom": "^11.0.0",
    "@types/json-stable-stringify": "^1.0.31",
    "@types/lockfile": "^0.4.29",
    "@types/lodash": "^4.14.65",
    "@types/mime-db": "^1.27.0",
    "@types/mkdirp": "^0.3.29",
    "@types/node": "^8.0.2",
    "@types/shelljs": "^0.7.2",
    "@types/sinon": "^2.3.1",
    "@types/user-home": "^2.0.0",
    "@types/which": "^1.0.28",
    "async-retry": "^1.1.0",
    "ava": "^0.19.1",
    "babel-cli": "^6.23.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-es2017": "^6.22.0",
    "babel-register": "^6.23.0",
    "cpx": "^1.5.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-markdown": "^1.0.0-beta.6",
    "eslint-plugin-typescript": "^0.1.0",
    "express": "^4.15.3",
    "markdownlint-cli": "^0.3.1",
    "mock-require": "^2.0.2",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.0.1",
    "on-headers": "^1.0.1",
    "proxyquire": "^1.8.0",
    "rimraf": "^2.6.1",
    "sinon": "^2.3.2",
    "ts-node": "^3.1.0",
    "typedoc": "^0.7.1",
    "typescript": "^2.3.3",
    "typescript-eslint-parser": "^3.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    ".sonarrc",
    "dist",
    "docs"
  ],
  "greenkeeper": {
    "ignore": [
      "eslint"
    ]
  },
  "homepage": "https://sonarwhal.com/",
  "keywords": [
    "a11y",
    "accessibility",
    "best-practices",
    "interoperability",
    "lint",
    "performance",
    "security"
  ],
  "license": "Apache-2.0",
  "main": "./dist/src/lib/sonar.js",
  "name": "@sonarwhal/sonar",
  "nyc": {
    "branches": 85,
    "cache": true,
    "check-coverage": true,
    "functions": 80,
    "include": [
      "dist/src/**/*.js"
    ],
    "instrument": true,
    "lines": 85,
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": true,
    "statements": 85
  },
  "repository": "sonarwhal/sonar",
  "scripts": {
    "ava": "ava",
    "build": "npm run clean && npm-run-all build:*",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc --outDir dist",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint --ext md --ext ts --ignore-pattern dist/* .",
    "lint:md": "markdownlint ./.github docs",
    "prepublishOnly": "npm i && npm run build",
    "site": "node dist/src/bin/sonar",
    "test": "npm run lint && npm run build && nyc ava",
    "test-on-travis": "npm run lint && npm run build && nyc ava \"dist/tests/**/*.js\" --concurrency=2 --timeout=2m",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:resources": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "0.0.2"
}
